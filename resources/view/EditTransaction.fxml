<BorderPane fx:id="createAccountPane" prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.EditTransactionController">
   <top>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label text="Edit Transaction">
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
         </children>
      </HBox>
   </top>
   <center>
      <ScrollPane prefHeight="210.0" prefWidth="416.0">
        <content>
          <AnchorPane>
               <children>
                  <GridPane layoutX="14.0" layoutY="4.0" prefHeight="436.0" prefWidth="400.0">
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="195.0" minWidth="10.0" prefWidth="138.0" />
                      <ColumnConstraints hgrow="SOMETIMES" maxWidth="269.0" minWidth="10.0" prefWidth="262.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="27.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="97.0" minHeight="10.0" prefHeight="91.0" vgrow="SOMETIMES" />
                      <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="44.0" minHeight="10.0" prefHeight="42.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="34.0" minHeight="30.0" prefHeight="25.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="43.0" minHeight="10.0" prefHeight="32.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="30.0" minHeight="30.0" prefHeight="28.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="Account" />
                        <Label text="Transaction Type" GridPane.rowIndex="2" />
                        <Label text="Transaction Date" GridPane.rowIndex="4" />
                        <Label text="Transaction Description" GridPane.rowIndex="6" />
                        <Label text="Payment Amount" GridPane.rowIndex="8" />
                        <Label text="Deposit Amount" GridPane.rowIndex="10" />
                        <TextField fx:id="paymentAmount" promptText="Edit the payment amount" GridPane.columnIndex="1" GridPane.rowIndex="8" />
                        <TextField fx:id="depositAmount" promptText="Edit the deposit amount" GridPane.columnIndex="1" GridPane.rowIndex="10" />
                        <TextArea fx:id="transactionDescription" prefHeight="66.0" prefWidth="262.0" promptText="Edit the transaction description" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                        <ChoiceBox fx:id="typeSelect" prefHeight="25.0" prefWidth="189.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <ChoiceBox fx:id="accountSelect" prefHeight="25.0" prefWidth="189.0" GridPane.columnIndex="1" />
                        <DatePicker fx:id="datePicker" promptText="Edit the transaction date" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label fx:id="transactionDateErrorMsg" prefHeight="18.0" prefWidth="294.0" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label fx:id="transactionDescErrorMsg" prefHeight="18.0" prefWidth="294.0" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="7" />
                        <Label fx:id="paymentAmountErrorMsg" prefHeight="18.0" prefWidth="294.0" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="9" />
                        <Label fx:id="depositAmountErrorMsg" prefHeight="18.0" prefWidth="294.0" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="11" />
                        <Label fx:id="accountErrorMsg" prefHeight="18.0" prefWidth="294.0" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label fx:id="transactionTypeErrorMsg" prefHeight="18.0" prefWidth="294.0" textFill="RED" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                     </children>
                  </GridPane>
               </children>
            </AnchorPane>
        </content>
      </ScrollPane>
   </center>
   <bottom>
      <HBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" onAction="#onCancelAction" text="Cancel" />
            <Button mnemonicParsing="false" onAction="#onSaveAction" text="Save" />
         </children>
      </HBox>
   </bottom>
</BorderPane>
