<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="application.controller.HomeController"
            prefWidth="500" prefHeight="500">
    <top>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" prefWidth="171.0" text="Homepage">
                    <font>
                        <Font size="17.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER" spacing = "30.0">
            <children>
                <Button fx:id="createNewAccountButton" onAction="#onCreateNewAccount" mnemonicParsing="false" text="Create New Account" />
                <Button fx:id="defineNewTransactionButton" onAction="#onDefineNewTransaction" mnemonicParsing="false" text="Define New Transaction Type" />
                <Button fx:id="enterTransactionButton" onAction="#onEnterTransaction" mnemonicParsing="false" text="Enter Transaction/Expense" />
                <Button fx:id="scheduleTransactionButton" onAction="#onScheduleTransaction" mnemonicParsing="false" text="Schedule a Transaction" />
                <Button fx:id="searchTransactionButton" onAction="#onSearchTransaction" mnemonicParsing="false" text="Search For Transaction" />
                <Button fx:id="viewReportsButton" onAction="#onViewReports" mnemonicParsing="false" text="View Reports" />
            </children>
        </VBox>
    </center>
</BorderPane>
